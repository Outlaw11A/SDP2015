<phpunit
	colors="true"
	verbose="true">
	<testsuites>
		<testsuite name="altorouter">
			<directory>./tests/</directory>
		</testsuite>
	</testsuites>
	<filter>
		<blacklist>
			<directory>./vendor/</directory>
		</blacklist>
	</filter>
	<logging>
		<log type="coverage-clover" target="build/logs/clover.xml"/>
	</logging>
</phpunit>